@model airbnbb.Models.LoginRequest

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login & Register</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap">
    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
    <style>
        /* General Body and Container */
        body {
            margin: 0;
            padding: 0;
            font-family: "Poppins", sans-serif;
            background-color: #f0f0f0;
            height: 100vh;
            width: 100vw;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            width: 100%;
            height: 100%;
            display: flex;
            padding-top:10px;
            padding-bottom: 10px;
        }

        /* Left Section */
        .left-section {
            width: 50%;
            background: linear-gradient(135deg, #ff6a6a, #ff0000);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: #fff;
            padding: 20px;
            text-align: center;
            position: relative;
        }

            .left-section .back-home {
                position: absolute;
                top: 10px;
                left: 10px;
                background-color: transparent;
                color: #fff;
                border: 2px solid #fff;
                border-radius: 25px;
                padding: 10px 20px;
                font-size: 1rem;
                font-weight: bold;
                text-decoration: none;
                cursor: pointer;
                transition: background-color 0.3s, color 0.3s;
            }

                .left-section .back-home:hover {
                    background-color: #fff;
                    color: #ff0000;
                }
            .left-section h2 {
                font-size: 1.5rem;
                margin-bottom: 0.5rem;
            }

            .left-section p {
                font-size: 1rem;
                margin-bottom: 1rem;
            }

            .left-section .btn {
                background-color: #fff;
                color: #ff0000;
                border: none;
                border-radius: 25px;
                padding: 15px 30px;
                font-size: 1.2rem;
                font-weight: bold;
                cursor: pointer;
                transition: 0.3s;
            }

                .left-section .btn:hover {
                    background-color: #ffeaea;
                }

        /* Right Section */
        .right-section {
            width: 50%;
            background-color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 50px;
            box-sizing: border-box;
        }

            .right-section form {
                width: 100%;
                max-width: 500px;
            }

            .right-section h2 {
                font-size: 2.5rem;
                color: #333;
                margin-bottom: 20px;
                text-align: center;
            }

        .input-field {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            background: #f0f0f0;
            padding: 15px 20px;
            border-radius: 30px;
        }

            .input-field i {
                margin-right: 15px;
                color: #333;
            }

            .input-field input {
                border: none;
                outline: none;
                background: none;
                font-size: 1.2rem;
                flex: 1;
            }

        .btn {
            width: 40%;
            background-color: #ff0000;
            color: #fff;
            border: none;
            border-radius: 25px;
            padding: 15px;
            font-size: 1.2rem;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
        }

            .btn:hover {
                background-color: #cc0000;
            }

        .social-media {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .social-icon {
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid #333;
            border-radius: 50%;
            color: #333;
            margin: 0 10px;
            font-size: 1.5rem;
            transition: 0.3s;
        }

            .social-icon:hover {
                background-color: #ff0000;
                color: #fff;
                border-color: #ff0000;
            }
    </style>
</head>
<body>
    <div class="container">
        <!-- Left Section -->
        <div class="left-section">
            <a href="@Url.Action("Index", "Home")" class="back-home"><i class="fa fa-home" aria-hidden="true"></i> Back Home</a>
            <h2>Welcome Back!</h2>
            <p>Join us to explore amazing features and opportunities.</p>
            <button class="btn" onclick="window.location.href='@Url.Action("Register", "Users")';">Sign Up</button>
        </div>

        <!-- Right Section -->
        <div class="right-section">
            <form method="post" asp-action="Login">
                <h2>Sign In</h2>
                <div class="input-field">
                    <i class="fas fa-envelope"></i>
                    <input type="email" asp-for="Email" placeholder="Email" required />
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input type="password" asp-for="Password" placeholder="Password" required />
                </div>
                <button type="submit" class="btn">Login</button>
                <p class="social-text" style="text-align: center; margin-top: 20px;">Or Sign in with social platforms</p>
                <div class="social-media">
                    <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-google"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
